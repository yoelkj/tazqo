---
const { items = [] } = Astro.props; // [{ q: string, a: any }]
---

<div class="divide-y divide-gray-200 border rounded-2xl">
  {
    items.map((it, i) => (
      <details class="group" {...(i === 0 ? { open: true } : {})}>
        <summary class="cursor-pointer list-none p-5 flex justify-between items-center">
          <span class="font-semibold text-gray-900">{it.q}</span>
          <span class="ml-4 transition group-open:rotate-180">âŒ„</span>
        </summary>
        <div class="px-5 pb-5 text-gray-600">{it.a}</div>
      </details>
    ))
  }
</div>
